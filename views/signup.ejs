
<%- include('shared/header-index.ejs') %> 


<div class="overlay">

    <!-- ======================Registration form================================= -->
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-7 m-auto p-5">
                <div class="form p-5 ">
                    <h2 class="text-center text-white">Registration</h2>
                    <form action="/handleSignup" method="POST">
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control inp pt-3" placeholder="First Name" name="first_name" value="<%= form_data.first_name %>">
                                <% if (form_errors.find(error => error.param === 'first_name')) { %>
                                    <div class="alert text-left h6 alert-danger py-2">
                                        Required
                                    </div>
                                <% } %>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control inp pt-3" placeholder="Last Name" name="last_name" value="<%= form_data.last_name %>">
                                <% if (form_errors.find(error => error.param === 'last_name')) { %>
                                    <div class="alert text-left h6 alert-danger py-2">
                                        Required
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <input type="text" class="form-control inp pt-3" placeholder="Username" name="username" value="<%= form_data.username %>">
                        <% if (form_errors.find(error => error.param === 'username')) { %>
                            <div class="alert text-left h6 alert-danger py-2">
                                Please type correct username using only capital and small english letters
                            </div>
                        <% } %>
                        <input type="email" class="form-control inp pt-3" placeholder="Email" name="email" value="<%= form_data.email %>">
                        <% if (form_errors.find(error => error.param === 'email')) { %>
                            <div class="alert text-left h6 alert-danger py-2">
                                Please type correct email address so we can contact you.
                            </div>
                        <% } %>
                        <% if (form_data_errors.find(error => error.param === 'email')) { %>
                            <div class="alert text-left h6 alert-danger py-2">
                                <%= form_data_errors.find(error => error.param === 'email').msg %>
                            </div>
                        <% } %>
                        <input type="password" class="form-control inp pt-3 mb-3" placeholder="Password" name="password" value="<%= form_data.password %>">
                        <% if (form_errors.find(error => error.param === 'password')) { %>
                            <div class="alert text-left h6 alert-danger py-2">
                                Please type strong password using capital and small letters combined with numbers and symbols
                                <br>
                                e.g. john@Doe2020
                            </div>
                        <% } %>
                        <button type="submit " class="btn btn-outline-info text-white w-100">Sign Up</button>
                        <p class="text-center pb-3"> <a href="/" class="text-white mt-3 d-block">Login to your existing account</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('shared/footer.ejs') %> 