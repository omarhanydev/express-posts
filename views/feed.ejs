
<%- include('shared/header.ejs') %> 


<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="post-topbar card m-5">
                <a class="btn btn-info btn-custom" data-toggle="modal" data-target="#exampleModal"
                    href="">New Post</a>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center text-white">
                <h5 class="modal-title " id="exampleModalLabel">New Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="text-white" aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/handleAddPost" method="POST">
                <div class="modal-body">
                    <input class="form-control my-3" placeholder="Enter Title" type="text" name="title">
                    <textarea class="form-control" placeholder="Enter Text" id="" cols="30"
                        rows="10" name="text"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ==============================posts========================================  -->
<div class="container">
    <div class="row">

        <% for( let i = 0; i < posts.length; i++ ) { %>
            <div class="col-md-7 card p-4 auto">
                <div class="post">
                    <a href="/profile/<%= posts[i].user.username %>" class="d-block text-dark">
                        <div class="media">
                            <img src="/images/man.jpg" width="60" class="mr-3" alt="...">
                            <div class="media-body">
                                <h5 class="mt-0"><%= posts[i].user.first_name + ' ' + posts[i].user.last_name %></h5>
                                <%= calculateTimeSince(posts[i].created_at) %>
                            </div>
                        </div>
                    </a>
                    <hr>
                    <h3><%= posts[i].title %></h3>
                    <p class="pt-1 mb-0"><%= posts[i].text %></p>
                </div>
            </div>
        <% } %>

    </div>
</div>
<!-- ==============================/posts========================================  -->



